<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp" app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/pm_list_header"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/pm_list_title"
            app:layout_constraintStart_toEndOf="@+id/pm_list_header"
            android:layout_marginStart="15dp" app:layout_constraintTop_toTopOf="@+id/pm_list_header"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="21dp" android:id="@+id/pm_list_descrip"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/pm_list_title"
            app:layout_constraintStart_toStartOf="@+id/pm_list_title"
    />
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/pm_list_date"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/pm_list_title"/>
</android.support.constraint.ConstraintLayout>